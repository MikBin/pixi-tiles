{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "classic",
        "target": "es2015",
        "removeComments": true,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "inlineSources": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}